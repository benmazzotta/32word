# PyPI Upload Credentials
# Copy this file to .env and fill in your actual API token
# The .env file is gitignored and will not be committed

TWINE_USERNAME=__token__
TWINE_PASSWORD=your-pypi-api-token-here

# Discord Bot Integration
# Get your bot token from Discord Developer Portal (https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=your_bot_token_here

# Flask Web App Integration
# Generate a strong random secret key for production:
#   python -c "import secrets; print(secrets.token_hex(32))"
# Or the app will auto-generate one for development
FLASK_SECRET_KEY=your_secret_key_here
